<div class="container">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
  <p id="notice"><%= notice %></p>
  <h1>お問い合わせ入力画面</h1>
  <%= form_for(@contact,url:confirm_contacts_path) do |f| %>

   <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :氏名 %>
  <%= f.text_field :name, class: 'form-control', style: "width: 400px;" %>
  <br>
  <%= f.label :メールアドレス %>
  <%= f.text_field :email, class: 'form-control', style: "width: 400px;" %>
  <br>
  <%= f.label :本文 %>
  <%= f.text_field :content, class: 'form-control', style: "width: 400px;" %>
  <br>
  <%= f.submit '確認画面へ', class: 'btn btn-primary btn-block', style: "width: 400px;" %>
<% end %>
</div>
</div>